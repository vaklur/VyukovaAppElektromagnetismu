<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:layout_editor_absoluteY="81dp">

    <TextView
        android:id="@+id/wrSetTV"
        android:layout_width="339dp"
        android:layout_height="45dp"
        android:text="Nastavení parametrů vlnovodu"
        android:textSize="24sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toTopOf="@+id/wrSetIV"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/wrSetIV"
        android:layout_width="354dp"
        android:layout_height="183dp"
        app:layout_constraintBottom_toTopOf="@+id/wrSetTV2"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/wrSetTV"
        app:srcCompat="@drawable/wg" />

    <TextView
        android:id="@+id/wrSetTV2"
        android:layout_width="200dp"
        android:layout_height="40dp"
        android:text="Šířka vlnovodu a [mm]"
        android:textAlignment="center"
        android:textSize="18sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toTopOf="@+id/wrSetTV3"
        app:layout_constraintEnd_toStartOf="@+id/wrSetAET"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/wrSetIV" />

    <TextView
        android:id="@+id/wrSetTV3"
        android:layout_width="200dp"
        android:layout_height="40dp"
        android:text="Výška vlnovodu b [mm]"
        android:textAlignment="center"
        android:textSize="18sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toTopOf="@+id/wrSetTV4"
        app:layout_constraintEnd_toStartOf="@+id/wrSetBET"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/wrSetTV2" />

    <TextView
        android:id="@+id/wrSetTV4"
        android:layout_width="200dp"
        android:layout_height="40dp"
        android:text="Permitivita dielektrika"
        android:textAlignment="center"
        android:textSize="18sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toTopOf="@+id/wrSetTV5"
        app:layout_constraintEnd_toStartOf="@+id/wrSetEpsrET"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/wrSetTV3" />

    <TextView
        android:id="@+id/wrSetTV5"
        android:layout_width="200dp"
        android:layout_height="40dp"
        android:text="Permeabilita dielektrika"
        android:textAlignment="center"
        android:textSize="18sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toTopOf="@+id/wrSetTV6"
        app:layout_constraintEnd_toStartOf="@+id/wrSetMiET"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/wrSetTV4" />

    <TextView
        android:id="@+id/wrSetTV6"
        android:layout_width="200dp"
        android:layout_height="40dp"
        android:text="Frekvence vlny f [GHz]"
        android:textAlignment="center"
        android:textSize="18sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toTopOf="@+id/wrSimBTN"
        app:layout_constraintEnd_toStartOf="@+id/wrSetFreqET"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/wrSetTV5" />

    <EditText
        android:id="@+id/wrSetAET"
        android:layout_width="150dp"
        android:layout_height="40dp"
        android:ems="10"
        android:inputType="numberDecimal"
        android:selectAllOnFocus="false"
        android:text="0"
        app:layout_constraintBottom_toTopOf="@+id/wrSetBET"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/wrSetTV2"
        app:layout_constraintTop_toBottomOf="@+id/wrSetIV" />

    <EditText
        android:id="@+id/wrSetBET"
        android:layout_width="150dp"
        android:layout_height="40dp"
        android:ems="10"
        android:inputType="numberDecimal"
        android:text="0"
        app:layout_constraintBottom_toTopOf="@+id/wrSetEpsrET"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/wrSetTV3"
        app:layout_constraintTop_toBottomOf="@+id/wrSetAET" />

    <EditText
        android:id="@+id/wrSetEpsrET"
        android:layout_width="150dp"
        android:layout_height="40dp"
        android:ems="10"
        android:inputType="numberDecimal"
        android:text="0"
        app:layout_constraintBottom_toTopOf="@+id/wrSetMiET"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/wrSetTV4"
        app:layout_constraintTop_toBottomOf="@+id/wrSetBET" />

    <EditText
        android:id="@+id/wrSetMiET"
        android:layout_width="150dp"
        android:layout_height="40dp"
        android:ems="10"
        android:inputType="numberDecimal"
        android:text="0"
        app:layout_constraintBottom_toTopOf="@+id/wrSetFreqET"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/wrSetTV5"
        app:layout_constraintTop_toBottomOf="@+id/wrSetEpsrET" />

    <EditText
        android:id="@+id/wrSetFreqET"
        android:layout_width="150dp"
        android:layout_height="40dp"
        android:ems="10"
        android:inputType="numberDecimal"
        android:text="0"
        app:layout_constraintBottom_toTopOf="@+id/wrModeBTN"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/wrSetTV6"
        app:layout_constraintTop_toBottomOf="@+id/wrSetMiET" />

    <Button
        android:id="@+id/wrSimBTN"
        android:layout_width="207dp"
        android:layout_height="49dp"
        android:text="Potvdit nastavení"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/wrModeBTN"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/wrSetTV6" />

    <Button
        android:id="@+id/wrModeBTN"
        android:layout_width="143dp"
        android:layout_height="49dp"
        android:text="VLASTNÍ VID"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/wrSimBTN"
        app:layout_constraintTop_toBottomOf="@+id/wrSetFreqET" />
</android.support.constraint.ConstraintLayout>